<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7200ef"
    android:stretchColumns="1">

   <TableRow
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:background="#A9A9A9"
       android:gravity="center_horizontal"
       android:padding="5dp">

      <TextView
          android:id="@+id/HelpTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="10dp"
          android:gravity="center"
          android:text="Need Support? Contact Us."
          android:textColor="#000000"
          android:textSize="25sp"
          android:textStyle="bold" />
   </TableRow>

   <TableRow>

      <TextView
          android:id="@+id/HelpTv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="12dp"
          android:layout_marginRight="30dp"
          android:text="Email us at:"
          android:textColor="#ffffff"
          android:textSize="20sp"
          android:textStyle="bold" />
   </TableRow>

   <TableRow
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#A9A9A9"
       android:padding="5dp">

      <TextView
          android:id="@+id/emailHelpTv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:text="info@wrightnet.com"
          android:textColor="#000000"
          android:textSize="20sp"
          android:textStyle="italic" />
   </TableRow>

   <TableRow>

      <TextView
          android:id="@+id/Help3Tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="12dp"
          android:layout_marginRight="30dp"
          android:text="Contact us at:"
          android:textColor="#ffffff"
          android:textSize="20sp"
          android:textStyle="bold" />
   </TableRow>

   <TableRow
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#A9A9A9"
       android:padding="5dp">

      <TextView
          android:id="@+id/phoneHelpTv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:text="+27112345678"
          android:textColor="#000000"
          android:textSize="20sp"
          android:textStyle="italic" />
   </TableRow>

</TableLayout>